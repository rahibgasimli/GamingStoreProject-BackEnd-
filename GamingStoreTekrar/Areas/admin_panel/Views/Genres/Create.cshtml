@model CreateGenreModel


<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <div asp-validation-summary="All"></div>
                <h4 class="card-title">Create a new Genre</h4>
                <div class="row">
                    <div class="container">
                        <form class="forms-sample" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label asp-for="@Model.Name"></label>
                                <input type="text" class="form-control" id="exampleInputUsername1" placeholder="Name" asp-for="@Model.Name">
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary" style="color:honeydew;">Create</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
