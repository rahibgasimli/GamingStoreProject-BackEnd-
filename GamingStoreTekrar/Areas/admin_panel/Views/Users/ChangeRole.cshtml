@model ChangeRoleModel

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <div asp-validation-summary="All"></div>
                <h4 class="card-title">Change User Role</h4>
                <div class="row">
                    <div class="container mb-4">
                        @if (Model.PhotoPath.StartsWith("http"))
                        {
                            <img src="/@Model.PhotoPath" id="profileImageShow" width="300" height="300" />
                        }
                        else
                        {
                            <img src="~/@Model.PhotoPath" id="profileImageShow" width="300" height="300" />
                        }
                        <p>@Model.UserName</p>
                        <p>@Model.Email</p>
                        @foreach(var usrRole in Model.UserRoles)
                        {
                            <button type="button" class="btn btn-dark btn-rounded btn-fw">@usrRole</button>
                        }
                    </div>
                    <div class="container">
                        <form class="forms-sample" method="post">
                            <select asp-for="SelectedRoleId">
                                @foreach (var role in Model.Roles)
                                {
                                    <option value="@role.Id">@role.Name</option>
                                }
                            </select>
                            <input asp-for="@Model.Id" value="@Model.Id" hidden/>
                            <button type="submit" class="btn btn-primary me-2" style="color:honeydew;">Submit</button>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
