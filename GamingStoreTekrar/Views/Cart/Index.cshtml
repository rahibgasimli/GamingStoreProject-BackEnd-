@model List<CartIndex>

@section SpecialCss {
    <link rel="stylesheet" href="~/css/cart.css" />
}

@{
    var totalPrice = 0.0;
}


<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3>Cart</h3>
                <span class="breadcrumb">@(Context.Request.Path.ToString().Replace("/", " > "))</span>
            </div>
        </div>
    </div>
</div>

<section class="shopping-cart dark">
    <div class="container">
        <div class="block-heading">
            <h2>Shopping Cart</h2>
        </div>
        <div class="content">
            <div class="row">
                <div class="col-md-12 col-lg-8">
                    <div class="items">

                        @if (Model.Count > 0)
                        {
                            @foreach (var game in Model)
                            {

                                totalPrice += game.Price;
                                <div class="product">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <img class="img-fluid mx-auto d-block image" src="~/@game.PhotoUrl">
                                        </div>
                                        <div class="col-md-8">
                                            <div class="info">
                                                <div class="row">
                                                    <div class="col-md-5 product-name">
                                                        <div class="product-name">
                                                            <a asp-action="Single" asp-controller="Games" asp-route-gameId="@game.GameId">@game.Name</a>
                                                            <div class="product-info">
                                                                <div>Genres: <span class="value">@game.Genre</span></div>
                                                                <div>GameTags: <span class="value">@game.GameTag</span></div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-7 price d-flex justify-content-end">
                                                        <span>$@game.Price</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        @* <div id="products"></div>

                        </div> *@
                    </div>
                    <div class="col-md-12 col-lg-4">
                        <div class="summary">
                            <h3>Summary</h3>
                            <div class="summary-item"><span class="text">Total</span><span class="price" id="totalPrice">$@totalPrice</span></div>
                            <button type="button" class="btn btn-primary btn-lg btn-block">Checkout</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>

