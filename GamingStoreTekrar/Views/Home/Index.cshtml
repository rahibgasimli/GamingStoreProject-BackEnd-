<div class="section trending">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="section-heading">
                    <h6>Trending</h6>
                    <h2>Trending Games</h2>
                </div>
            </div>
            @if (Model.TrendingGames.Count > 0)
            {
                foreach (var trendGame in Model.TrendingGames)
                {
                    <div class="col-lg-3 col-md-6">
                        <div class="item">
                            <div class="thumb">
                                <a asp-action="Single" asp-controller="Games" asp-route-gameId="@trendGame.GameId"><img src="~/@trendGame.PhotoUrl" alt=""></a>
                                <span class="price">$@trendGame.Price</span>
                            </div>
                            <div class="down-content">
                                <span class="category">@trendGame.Genre</span>
                                <h4>@trendGame.Name</h4>
                                <a asp-action="Single" asp-controller="Games" asp-route-gameId="@trendGame.GameId"><i class="fa fa-shopping-bag"></i></a>
                            </div>
                        </div>
                    </div>
                }
            }

        </div>
    </div>
</div>

