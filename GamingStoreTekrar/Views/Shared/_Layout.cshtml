@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap"
          rel="stylesheet">

    <title>Lugx Gaming Shop HTML5 Template</title>

    <!-- Bootstrap core CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">


    <!-- Additional CSS Files -->
    <link rel="shortcut icon" type="image/png" href="~/images/logo.png"/>
    <link rel="stylesheet" href="~/css/templatemo-lugx-gaming.css">
    <link rel="stylesheet" href="~/css/owl.css">
    <link rel="stylesheet" href="~/css/animate.css">
    <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    @RenderSection("SpecialCss",false);
</head>

<body>

    <!-- ***** Preloader Start ***** -->
    <div id="js-preloader" class="js-preloader">
        <div class="preloader-inner">
            <span class="dot"></span>
            <div class="dots">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </div>
    <!-- ***** Preloader End ***** -->
    <!-- ***** Header Area Start ***** -->
    <header class="header-area header-sticky">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <!-- ***** Logo Start ***** -->
                        <a class="logo" asp-action="Index" asp-controller="Home">
                            <img src="~/images/logo.png" alt="" style="width: 158px;">
                        </a>
                        <!-- ***** Logo End ***** -->
                        <!-- ***** Menu Start ***** -->
                        <ul class="nav">
                            @if (Context.Request.Path == "/")
                            {
                                <li><a id="home" class="active" asp-action="Index" asp-controller="Home">Home</a></li>
                            }
                            else
                            {
                                <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                            }
                            @if (Context.Request.Path == "/Games")
                            {
                                <li><a class="active" asp-action="Index" asp-controller="Games">Games</a></li>
                            }
                            else
                            {
                                <li><a asp-action="Index" asp-controller="Games">Games</a></li>
                            }
                            @if (Context.Request.Path == "/Blogs")
                            {
                                <li><a class="active" asp-action="Index" asp-controller="Blogs">Blogs</a></li>
                            }
                            else
                            {
                                <li><a asp-action="Index" asp-controller="Blogs">Blogs</a></li>
                            }
                            @if (Context.Request.Path == "/Home/ContactUs")
                            {
                                <li><a class="active" asp-action="ContactUs" asp-controller="Home">ContactUs</a></li>
                            }
                            else
                            {
                                <li><a asp-action="ContactUs" asp-controller="Home">ContactUs</a></li>
                            }
                            @if (User.Identity == null || !User.Identity.IsAuthenticated)
                            {
                                <li><a asp-action="Login" asp-controller="Auth">Sign In</a></li>
                            }
                            else if (User.Identity.IsAuthenticated)
                            {
                                <!-- Example single danger button -->
                                <li>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-danger dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                            @{
                                                var name = User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Name);
                                            }
                                            @if (name != null)
                                            {
                                                @name.Value
                                            }
                                            else
                                            {
                                                <span>Profile</span>
                                            }


                                        </button>
                                        <div class="dropdown-menu" style="background-color:#ee626b!important">
                                            <div class="row">
                                                <div class="col-lg-12 dropdown-item">
                                                    <a asp-action="Index" asp-controller="Profile">Go to your profile</a>
                                                </div>
                                                <div class="col-lg-12 dropdown-item">
                                                    <a asp-action="Index" asp-controller="Cart">Cart</a>
                                                </div>
                                                <div class="col-lg-12 dropdown-item">
                                                    <a asp-action="LogOut" asp-controller="Auth">Sign Out</a>
                                                </div>
                                            </div>
                                        </div>
                                        @* <ul class="dropdown-menu" style="background-color:transparent!important; border:none!important;">

                                    </ul> *@
                                    </div>
                                </li>
                            }
                        </ul>
                        <a class='menu-trigger'>
                            <span>Menu</span>
                        </a>
                        <!-- ***** Menu End ***** -->
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- ***** Header Area End ***** -->
    @RenderBody()

    <footer>
        <div class="container">
            <div class="col-lg-12">
                <p>
                    Copyright © 2048 LUGX Gaming Company. All rights reserved. &nbsp;&nbsp; <a rel="nofollow"
                                                                                               href="https://templatemo.com" target="_blank">Design: TemplateMo</a>
                </p>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <!-- Bootstrap core JavaScript -->
    <script src="~/lib//jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/isotope.min.js"></script>
    <script src="~/js/owl-carousel.js"></script>
    <script src="~/js/counter.js"></script>
    <script src="~/js/custom.js"></script>
    @RenderSection("SpecialJs",false)

</body>

</html>